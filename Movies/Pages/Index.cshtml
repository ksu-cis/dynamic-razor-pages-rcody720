@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Movies</h1>

<ul class="movie-list">
    @foreach (Movie movie in MovieDatabase.All)
    {
        <li>
            <h3 class="title">@movie.Title</h3>
            <div class="mpaa">@movie.MPAARating</div>
            <div class="genre">@movie.MajorGenre</div>
        </li>
    }
</ul>
